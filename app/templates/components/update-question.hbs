{{#if isEditQuestion}}
Display update question form
<div class="container">
<h1>Update Question</h1>
<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" placeholder=question.author}}
  </div>
  <div class="form-group">
    <label for="topic">Topic</label>
    {{input value=topic id="topic" placeholder=question.topic}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" placeholder=question.title}}
  </div>
  <div class="form-group">
    <label for="additionalNotes">Additional Notes</label>
    {{input value=additionalNotes id="additionalNotes" placeholder=question.additionalNotes}}
  </div>
    <button {{action 'update'}} type="button" class="btn btn-lg"name="button">Save Changes</button>
</form>
</div>
{{else}}
<button type="button" name="button" {{action 'isEditQuestion'}}>Edit Question</button>
{{/if}}
