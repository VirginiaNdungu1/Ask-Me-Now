{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <button {{action 'saveAnswer'}}>Submit Answer</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-lg" {{action 'showAnswerForm'}}>ANSWER</button>
{{/if}}
