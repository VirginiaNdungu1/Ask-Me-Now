<div class="answer">
  <div class="flex-container">
    <div class="flex-item">
      <div class="answer-author">
       {{answer.author}}
       <div class="editQuestion">
       {{edit-answer answer=answer editAnswer="editAnswer"}}
       </div>
        <button class="delete-answer" {{action 'deleteAnswer'}} type="button" name="button">Delete Answer</button>
      </div>
      <div class="answer-content">
        <textarea name="name" rows="8" cols="80">{{answer.content}}</textarea>
      </div>
    </div>
  </div>
</div>
